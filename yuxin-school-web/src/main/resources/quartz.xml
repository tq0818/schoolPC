<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- =====================主扫描下单任务========================== -->
	<!-- 定义目标bean和bean中的方法 -->
	<!--<bean id="timerTaskPrimary" class="com.yuxin.wx.controller.task.TimerTaskPrimary" >-->
	<!--</bean>-->

	<bean id="timerTaskPrimaryQtzJobMethod" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="timerTaskPrimary"/>
		<property name="targetMethod" value="taskTikuUserExerciseAnswer"/>
		<!-- 是否允许任务并发执行,当值为false时，表示必须等到前一个线程处理完毕后才再启一个新的线程 -->
		<property name="concurrent" value="false"/>
	</bean>

	<bean id="OrderTaskPrimaryCronTriggerBean" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail">
			<ref bean="timerTaskPrimaryQtzJobMethod" />
		</property>
		<property name="cronExpression">
			<value>0 0/2 * * * ?</value>
		</property>
	</bean>

</beans>